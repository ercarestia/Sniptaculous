<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
      <Title>throw new ArgumentNullException with a message</Title>
      <Shortcut>eanm</Shortcut>
      <Description>Code snippet to throw a ArgumentNullException() with a message.</Description>
    </Header>
    <Snippet>
      <Imports>
        <Import>
          <Namespace>System</Namespace>
        </Import>
      </Imports>
      <References>
        <Reference>
          <Assembly>System.dll</Assembly>
        </Reference>
      </References>      
      <Declarations>
        <Literal>
          <ID>param</ID>
          <ToolTip>Replace with the name of the parameter</ToolTip>
          <Default>param</Default>
        </Literal>        
        <Literal>
          <ID>message</ID>
          <ToolTip>Replace with the exception message</ToolTip>
          <Default>message</Default>
        </Literal>
      </Declarations>       
      <Code Language="csharp">
      <![CDATA[throw new ArgumentNullException(nameof($param$), "$message$");$end$]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>